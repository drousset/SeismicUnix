a359 15
		/* Allow argv[1] to be the par file -- ugh (Jack) */
		pffd = efopen(xargv[1], "r");
		efseek(pffd, 0, SEEK_END);
		if (eftell(pffd) < LONG_MAX) {
			rewind(pffd);
			parfile = true;
			while (EOF != (i = getc(pffd))) {
				if (iscntrl(i) || !isascii(i)) {
					parfile = false;
					break;
				}
				efclose(pffd);
				if (parfile) pfname = xargv[1];
			}
		}
