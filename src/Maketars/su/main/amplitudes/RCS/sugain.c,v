	/* Get nt from first trace */
	if (!gettr(&tr)) err("can't get first trace");
	nt   = (int) tr.ns;
	dt   = (float) tr.dt/1000000.0;   /* microsecs to secs */
	tmin = (float) tr.delrt/1000.0;   /* millisecs to secs */
	if (!dt) getparfloat("dt", &dt);
	if (!dt) MUSTGETPARFLOAT("dt", &dt);
