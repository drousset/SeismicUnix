        }
}


/* Hard clip outlying magnitudes */
a370 17
/* Hard clip outlying values */
void do_vclip(
	float *data,		/* the data				*/
        register float vclip,   /* hard clip if value > vclip           */
        register int nt         /* number of samples                    */
)
{
        register float *dataptr = data;

        while (nt--) {
                if (*dataptr > vclip) {
                        *dataptr = vclip;
                }
                dataptr++;
        }
}

