text
@d4 1
a4 1
/* SUNMO: $Revision: 1.27 $ ; $Date: 2011/11/16 23:21:55 $		*/
d248 1
a248 8
			/* get offset value honoring scalel parameter */
			if (tr.scalel < 0 ) {
				offset = (float)(tr.offset * ABS(tr.scalel));
			} else if (tr.scalel > 0 ) {
				offset = (float) (tr.offset/ABS(tr.scalel));
			} else {
				offset = (float) (tr.offset);
			}
