	/* Tapering function (cosine bells) */
	{ register int it;
	  
	  for (it = 0; it < nt; ++it) {
	  	float am1, am2;
		float wt, tvb;
		
		am1 = 0.0;
		am2 = 0.0;
		if (mt1 > 0) am1 = (float) (mt1 - it) / (float) (mt1+1);
		if (mt2 > 0) am2 = (float) (it - mt3) / (float) mt2;
	
		if (it < mt1)
			wt = (1.0 + cos(PI*am1))/2.0;
		else if (it > mt3)
			wt = (1.0 + cos(PI*am2))/2.0;
		else wt = 1.0;
