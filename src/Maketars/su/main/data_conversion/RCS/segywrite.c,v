        if (!getparstring("hfile", &hfile))     hfile = "header";
        if (!getparstring("bfile", &bfile))     bfile = "binary";
        if (!getparint   ("trmin", &trmin))     trmin = 1;
        if (!getparint   ("trmax", &trmax))     trmax = INT_MAX;
